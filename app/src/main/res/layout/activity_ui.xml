<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="700dp"
        android:background="@color/colorTitle"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/border_grey">

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ПРОФИЛЬ"
                app:layout_constraintBottom_toTopOf="@+id/acc_name"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/acc_name"
                style="@style/profileBlackBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daria.Antonova@vtbcapital.com"
                app:layout_constraintBottom_toTopOf="@+id/stub"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stub2"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/profile_notify"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/profile_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="УВЕДОМЛЕНИЯ"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/border_white">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/div_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Новые сообщения"
                    android:textColor="@color/colorBlack" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:checked="true"
                    android:thumb="@drawable/switch_thumb_custom"
                    android:track="@drawable/switch_track_custom" />
            </RelativeLayout>

            <View
                android:id="@+id/div_1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/line_grey"
                app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Новости"
                    android:textColor="@color/colorBlack" />

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:thumb="@drawable/switch_thumb_custom"
                    android:track="@drawable/switch_track_custom" />
            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:background="@drawable/border_grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="ПОКАЗЫВАТЬ РАЗДЕЛЫ" />

        </FrameLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/border_white">

            <RelativeLayout
                android:id="@+id/biz_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/div_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/biz_card_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/business_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/biz_card_icon"
                    android:text="Сканировать визитку"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/biz_card_check"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_checkbox_design"
                    android:button="@null"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:id="@+id/div_2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="@dimen/div_margin"
                android:background="@drawable/line_grey"
                app:layout_constraintBottom_toTopOf="@+id/food_order_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/biz_card_layout" />

            <RelativeLayout
                android:id="@+id/food_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/div_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_2">

                <ImageView
                    android:id="@+id/food_order_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/food_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/food_order_icon"
                    android:text="Заказ еды"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/food_order_check"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_checkbox_design"
                    android:button="@null"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:id="@+id/div_3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="@dimen/div_margin"
                android:background="@drawable/line_grey"
                app:layout_constraintBottom_toTopOf="@+id/taxi_order_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/food_order_layout" />

            <RelativeLayout
                android:id="@+id/taxi_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/div_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_3">

                <ImageView
                    android:id="@+id/taxi_order_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/taxi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/taxi_order_icon"
                    android:text="Заказ такси"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/taxi_order_check"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_checkbox_design"
                    android:button="@null"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:id="@+id/div_4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="@dimen/div_margin"
                android:background="@drawable/line_grey"
                app:layout_constraintBottom_toTopOf="@+id/bonus_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taxi_order_layout" />

            <RelativeLayout
                android:id="@+id/bonus_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/div_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_4">

                <ImageView
                    android:id="@+id/bonus_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bonus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/bonus_icon"
                    android:text="Бонусные программы"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/bounus_check"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_checkbox_design"
                    android:button="@null"
                    android:checked="false" />
            </RelativeLayout>

            <View
                android:id="@+id/div_5"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="@dimen/div_margin"
                android:background="@drawable/line_grey"
                app:layout_constraintBottom_toTopOf="@+id/translation_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bonus_layout" />

            <RelativeLayout
                android:id="@+id/translation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_5">

                <ImageView
                    android:id="@+id/translation_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/translation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/translation_icon"
                    android:text="Трансляции"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/translation_check"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/custom_checkbox_design"
                    android:button="@null"
                    android:checked="false" />
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:background="@drawable/border_grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="ВХОД ПО Touch ID" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/touch_id_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/border_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Использовать Touch ID"
                android:textColor="@color/colorBlack" />

            <Switch
                android:id="@+id/touch_id_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:checked="true"
                android:thumb="@drawable/switch_thumb_custom"
                android:track="@drawable/switch_track_custom" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/border_grey">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/border_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="Выйти из аккаунта"
                android:textColor="@color/colorDarkBlue" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>